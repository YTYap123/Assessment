<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assesstment.Views.StartupViews.SplashScreenView"
             
             xmlns:Control="clr-namespace:Assesstment.Controls">

    <AbsoluteLayout>
        <!--BoostOrder Logo-->
        <Image AbsoluteLayout.LayoutFlags="PositionProportional"
               AbsoluteLayout.LayoutBounds="0.5,0.35"
               Source="{Control:EmbeddedImage ResourceID=Assesstment.Images.IconImages.boostorder_vertical_icon.png}"
               HeightRequest="125"
               WidthRequest="200">
        </Image>

        <!--BoostOrder Label-->
        <Label AbsoluteLayout.LayoutFlags="PositionProportional"
               AbsoluteLayout.LayoutBounds="0.5,0.99"
               Text="Copyright © Boostorder Sdn. Bhd."
               TextColor="Black"/>
    </AbsoluteLayout>
</ContentPage>